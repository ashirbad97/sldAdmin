<!-- Modal -->
<div class="modal" id="subjectOnboardingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Patient Data Form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <form id="patientForm">
            <div class="form-group">
              <label for="patientId">Patient ID:</label>
              <input type="text" id="patientId" name="patientId" required>
            </div>

            <div class="form-group">
              <label for="gender">Gender:</label>
              <select id="gender" name="gender" required>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="form-group">
              <label for="age">Age:</label>
              <input type="number" id="age" name="age" required>
            </div>

            <div class="form-group">
              <label for="name">Name:</label>
              <input type="text" id="name" name="name" required>
            </div>

            <div class="form-group">
              <label for="schoolStandard">School Standard:</label>
              <input type="text" id="schoolStandard" name="schoolStandard" required>
            </div>

            <div class="form-group">
              <label for="interventionDate">Intervention Date:</label>
              <input type="date" id="interventionDate" name="interventionDate" required>
            </div>

            <div class="form-group">
              <label for="glad">GLAD:</label>
              <input type="number" id="glad" name="glad" required>
            </div>

            <div class="form-group">
              <label for="ctopp2">CTOPP2:</label>
              <input type="number" id="ctopp2" name="ctopp2" required>
            </div>

            <div class="form-group">
              <label for="wrat5">WRAT5:</label>
              <input type="number" id="wrat5" name="wrat5" required>
            </div>

            <div class="form-group">
              <label for="fmriFindings">fMRI Findings:</label>
              <textarea id="fmriFindings" name="fmriFindings" rows="4" required></textarea>
            </div>

            <div class="form-group">
              <label for="additionalData">Additional Data:</label>
              <textarea id="additionalData" name="additionalData" rows="4" required></textarea>
            </div>

            <div class="form-group">
              <label for="keyphrase">Keyphrase:</label>
              <input type="text" id="keyphrase" name="keyphrase" required>
            </div>

            <div class="form-group">
              <label for="currentLevel">Current Level:</label>
            <input type="text" id="currentLevel" name="currentLevel" required>
            </div>

            <div class="submit-wrapper">
                {{!-- <button type="submit" class="btn btn-primary">Submit</button> --}}
                <div id="loadingSpinner" class="loading-spinner" style="display: none;"></div>
            </div>
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="save-changes">Save changes</button>
      </div>
    </div>
  </div>
</div>